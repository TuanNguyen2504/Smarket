  link(rel="stylesheet", href="/css/categories.css")
  .categories
    h3.categories__title Danh mục
    .categories__list
      each category in categories
        a.categories__item(href="/common/categories/" + category.groupType)
          img(src=category.photo, alt=category.title)
          h5= category.title