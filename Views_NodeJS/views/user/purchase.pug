extends ../templates/general.template.pug
include ../mixins/get-server-variables.pug
include ../mixins/navbar.mixin.pug
include ../mixins/footer.mixin.pug
include ../mixins/scroll-top.mixin.pug

block append style
  link(rel="stylesheet", href="/vendors/selectize/selectize.min.css")
  link(rel="stylesheet", href="/css/home.css")
  link(rel="stylesheet", href="/css/user/purchase.css")



block content
  .page-container
    section.content-wrap
      +navbar
      .navbar-break
      nav.breadcrumb-nav(aria-label='breadcrumb')
        ol.breadcrumb
          li.breadcrumb-item
            a(href='/') Trang chủ
          li.breadcrumb-item Đặt hàng 
      
      .row.justify-content-md-center.mb-3
        .col.col-md-4.bg-light.py-1.pt-2.rounded-top
          div THÔNG TIN NHẬN HÀNG
        .col-md-4.bg-light.pt-2
          input#delivery-date.border.rounded.w-100(type="text", placeholder="Thời gian nhận hàng", required)
        .col-md-1.bg-light
        .col.col-md-9.bg-light.py-4
          div.address-group.mb-2
            input#original(type="radio", name="address", checked)
            label#original-address.ml-3(for="original")= `${user.name} (${user.phone}) ${user.address}`
          div.address-group
            input(type="radio", name="address")
            input#receive-name.border.rounded.ml-3.addition(type="text", placeholder="Họ tên")
            input#receive-phone.border.rounded.ml-3.addition(type="text", placeholder="Số điện thoại")
            input#receive-address.border.rounded.ml-3.addition(type="text", placeholder="Địa chỉ")
      .row.justify-content-md-center#head-table
        .col.col-md-9.border.row.justify-content-md-center.bg-light.py-1.mb-1
          .col.col-md-11.row.align-items-md-center
            .col-sm-6
            .col-sm-2.text-center
              div Đơn giá
            .col-sm-2.text-center
              div Số lượng
            .col-sm-2.text-center
              div Thành tiền
      .row.justify-content-md-center.mb-2#order-items
      .row.justify-content-md-center.mt-3
        .col.col-md-9.bg-light.py-1.pt-2.rounded-top
          div PHƯƠNG THỨC THANH TOÁN
        .col-md-5
        .col.col-md-9.bg-light.d-flex.justify-content-around.pt-2
          .form-group
            input#online(type="radio", name="payment", checked)
            label.ml-3(for="online") Thanh toán online
          .form-group
            input#cod(type="radio", name="payment")
            label.ml-3(for="cod") Thanh toán khi nhận hàng
      .row.justify-content-md-center.my-2
        .col-md-5
        .col-md-4.group.row.bg-light
          .col-6.mt-1 Tiền hàng 
          .col-6.mt-1.text-right#total-product 200000 VND
          .col-6.mt-1 Tiền ship 
          .col-6.mt-1.text-right#total-ship 200000 VND
          .col-6.mt-1 Tổng tiền
          .col-6.mt-1.text-right#total-order.text-danger 200000 VND


            
      .row.justify-content-md-center.my-3#action
        a#get-order.col-md-4.btn.btn-primary(href="/common/purchase") Đặt hàng
        
        
block append script 

  script(src="/vendors/selectize/selectize.min.js")
  +getServerVarScript
  script(src="/vendors/pagination.min.js") 
  script(src="/js/navbar.js") 
  script(type="text/javascript", src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js")
  script(src="/js/user/purchase.js") 